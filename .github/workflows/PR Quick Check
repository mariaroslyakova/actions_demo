name: PR Quick Check

on:
  pull_request:
    branches: [ main, master ]

jobs:
  quick-check:
    runs-on: ubuntu-latest
    timeout-minutes: 5
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: "3.10"
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pytest flake8
    
    - name: Run quick tests
      run: |
        cd tests
        python -m pytest test_taskclass.py::TestTask -v
      env:
        PYTHONPATH: src
    
    - name: Quick lint
      run: |
        flake8 src/TaskClass.py --max-line-length=127
